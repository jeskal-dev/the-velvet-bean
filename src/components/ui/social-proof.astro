---
import StarIcon from "../icons/star-icon.astro";

interface Props {
  rating: string;
  count: string;
  label: string;
  class?: string;
}

const { rating, count, label, class: className } = Astro.props;
---

<div class:list={["flex items-center gap-4", className]}>
  <!-- Glowing Stars Badge -->
  <div
    class="flex items-center gap-1 bg-accent/10 border border-accent/20 px-3 py-1 rounded-full shadow-xs shadow-accent/5"
  >
    <div class="flex -space-x-0.5">
      {
        [1, 2, 3, 4, 5].map(() => (
          <StarIcon size="xs" class="text-accent fill-accent" />
        ))
      }
    </div>
    <span class="text-sm font-bold text-accent ml-1">{rating}</span>
  </div>

  <!-- Text Info -->
  <div class="flex flex-col items-start leading-tight">
    <span class="text-sm font-bold text-foreground">{count} Rese√±as</span>
    <span class="text-xs text-muted-foreground italic">{label}</span>
  </div>
</div>
