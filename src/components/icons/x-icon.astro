---
interface Props {
  id?: string;
  class?: string;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
}

const { id, class: className, size = "md" } = Astro.props;

const sizeClasses = {
  xs: "w-3 h-3",
  sm: "w-4 h-4",
  md: "w-5 h-5",
  lg: "w-6 h-6",
  xl: "w-7 h-7",
};
---

<svg
  id={id}
  class:list={[sizeClasses[size], className]}
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    d="M6 18L18 6M6 6l12 12"></path>
</svg>
