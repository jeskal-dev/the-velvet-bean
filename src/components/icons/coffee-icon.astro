---
interface Props {
  class?: string;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
}

const { class: className, size = "md" } = Astro.props;

const sizeClasses = {
  xs: "w-3 h-3",
  sm: "w-4 h-4",
  md: "w-5 h-5",
  lg: "w-6 h-6",
  xl: "w-7 h-7",
};
---

<svg
  class:list={[sizeClasses[size], className]}
  fill="none"
  stroke="currentColor"
  viewBox="0 0 24 24"
>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="1.5"
    d="M8 5h8a5 5 0 015 5v1a5 5 0 01-5 5H8a5 5 0 01-5-5v-1a5 5 0 015-5z"></path>
  <path
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="1.5"
    d="M12 5V3m0 13v3m-2-3h4"></path>
</svg>
