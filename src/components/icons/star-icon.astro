---
interface Props {
  class?: string;
  size?: "xs" | "sm" | "md" | "lg" | "xl";
}

const { class: className, size = "md" } = Astro.props;

const sizeClasses = {
  xs: "w-3 h-3",
  sm: "w-4 h-4",
  md: "w-5 h-5",
  lg: "w-6 h-6",
  xl: "w-7 h-7",
};
---

<svg
  class:list={[sizeClasses[size], className]}
  fill="currentColor"
  viewBox="0 0 24 24"
>
